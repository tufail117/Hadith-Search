{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE"
    },
    "deploy": {
        "startCommand": "python -m uvicorn src.api.main:app --host 0.0.0.0 --port $PORT",
        "healthcheckPath": "/api/health",
        "healthcheckTimeout": 600,
        "restartPolicyType": "ON_FAILURE"
    }
}